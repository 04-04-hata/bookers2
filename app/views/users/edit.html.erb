<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
            <% if @user.errors.any? %>
              <div class="error">
                <%= @user.errors.count %>error prohibited this obj from being saved:
                 <% @user.errors.full_messages.each do |message| %>
                  <ul>
                    <li><%= message %></li>
                  </ul>
                  <% end %>
              </div>
            <% end %>

            <%= form_with model: @user, local: true do |f| %>
            <div class="form-group">
                <label for="user_name">Name</label><br>
                <%= f.text_field :name %><br>

                <label for="user_image">Image</label><br>
                <%= f.attachment_field :profile_image %><br>

                <label for="user_introduction">Introduction</label><br>
                <%= f.text_area :introduction %><br>

                <%= f.submit 'Update User', class:"btn btn-secondary"%>

              <% end %>
          </div>
        </div>
     </div>
 </main>